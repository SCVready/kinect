{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Pipe Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolderBasename}/build/kinectalarm",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "pipeTransport": {
                "debuggerPath": "/opt/sdks/rasp/sysroots/x86_64-pokysdk-linux/usr/bin/aarch64-poky-linux/aarch64-poky-linux-gdb",
                "pipeProgram": "/usr/bin/ssh",
                "pipeArgs": ["root@192.168.0.4"],
                "pipeCwd": ""
            },
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Launch Program (SSH)",
            "target": "build/kinectalarm",
            "cwd": "${workspaceRoot}",
            "pathSubstitutions": {
                "/home/scvready/workspace/github/presenceos/kinectalarm/": "/home/root/kinectalarm/"
            },
            "ssh": {
                "host": "192.168.0.4",
                "cwd": "/home/root/kinectalarm",
                "user": "root",
                "password": "",
                "useAgent": false,
                "forwardX11": false
            },
            "preLaunchTask": "build"
        }
    ]
}